<h1>Bands Here to Collect A Musician</h1>

<table>

  <tr>
    <th>Name</th>
    <th>Logo</th>
    <th>Members from Rehab</th>
  </tr>

<% for band in @bands %>
  <tr>
    <td>Name: <%= band.name() %></td>
    <td>Logo: <%= band.logo_url() %></td>
    <td><a class="button" href="/musicians/band/<%= band.id %>">Show</a></td>
  </tr>
<% end %>

</table>

<p><a href='/bands/new'>Add a Band</a></p>
